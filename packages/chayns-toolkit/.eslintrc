{
	"extends": "@chayns-toolkit",
	"rules": {
		"no-console": "off",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true,
				"optionalDependencies": false,
				"peerDependencies": false
			}
		],
		"import/no-unresolved": ["error", { "ignore": ["type-fest"] }]
	},
	"globals": {
		"__PKG_VERSION__": true
	}
}
