{
	"extends": "@chayns-toolkit",
	"globals": {
		"__PKG_VERSION__": true
	},
	"rules": {
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true,
				"optionalDependencies": false,
				"peerDependencies": false
			}
		],
		"import/no-unresolved": [
			"error",
			{
				"ignore": ["type-fest"]
			}
		],
		"no-console": "off",
		"no-restricted-syntax": "off"
	}
}
